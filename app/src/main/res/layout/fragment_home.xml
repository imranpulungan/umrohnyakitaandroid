<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color1">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:fillColor="#FFFFFFFF"
                app:pageColor="#00000000"
                app:radius="6dp"
                app:slideInterval="3000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp"
                tools:background="@drawable/background_with_radius1"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:minLines="2"
                        android:gravity="center"
                        android:text="Status Paket PPC"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color1"/>

                    <TextView
                        android:id="@+id/tv_jabatan"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Jabatan"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/assalamualaikum"
                        android:gravity="center"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/tv_nama_lengkap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/form_nama_lengkap"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_id_perwakilan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PW-IIW-12109"
                        android:gravity="center"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/tv_kurs_dollar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_with_radius1"
                        android:text="Loading..."
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:padding="10dp"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/info_perwakilan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tambah Jamaah"
                            android:textStyle="bold"
                            android:padding="10dp"/>

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TableRow>
                                <android.support.v7.widget.CardView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp">
                                    <LinearLayout
                                        android:id="@+id/layout_kwitansi_reguler"
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:orientation="horizontal">
                                        <ImageButton
                                            android:layout_weight="1"
                                            android:background="@android:color/holo_orange_dark"
                                            android:tint="@android:color/white"
                                            android:clickable="false"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_menu_add_border_circle"/>
                                        <LinearLayout
                                            android:layout_weight="2"
                                            android:layout_gravity="center"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:padding="5dp">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Kwitansi"/>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="REGULER"
                                                android:textSize="18dp"
                                                android:textStyle="bold"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>
                                <android.support.v7.widget.CardView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp">
                                    <LinearLayout
                                        android:id="@+id/layout_kwitansi_free"
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:orientation="horizontal">
                                        <ImageButton
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimary"
                                            android:tint="@android:color/white"
                                            android:clickable="false"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_menu_add_border_circle"/>
                                        <LinearLayout
                                            android:layout_weight="2"
                                            android:layout_gravity="center"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:padding="5dp">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Kwitansi"/>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="FREE"
                                                android:textSize="18dp"
                                                android:textStyle="bold"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>
                            </TableRow>
                            <TableRow>
                                <android.support.v7.widget.CardView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp">
                                    <LinearLayout
                                        android:id="@+id/layout_kwitansi_old"
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:orientation="horizontal">
                                        <ImageButton
                                            android:layout_weight="1"
                                            android:background="@android:color/black"
                                            android:tint="@android:color/white"
                                            android:clickable="false"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_menu_add_border_circle"/>
                                        <LinearLayout
                                            android:layout_weight="2"
                                            android:layout_gravity="center"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:padding="5dp">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Kwitansi"/>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="LAMA"
                                                android:textSize="18dp"
                                                android:textStyle="bold"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>
                                <!--INVISIBLE MENU-->
                                <android.support.v7.widget.CardView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:visibility="invisible">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <ImageButton
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_menu_add_border_circle"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Kwitansi"/>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Kwitansi"
                                                android:textSize="20dp"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/info_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">
                        <TextView
                            android:id="@+id/tv_title_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Data Penjualan"
                            android:textStyle="bold"
                            android:padding="10dp"/>

                        <android.support.v7.widget.RecyclerView
                            android:layout_margin="5dp"
                            android:id="@+id/rv_data_perwakilan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <LinearLayout
                                android:id="@+id/insufficient"
                                android:visibility="gone"
                                tools:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_cloud_off_black_24dp" />
                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Data Tidak Tersedia"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/bottom_sheet_info" />

</android.support.design.widget.CoordinatorLayout>