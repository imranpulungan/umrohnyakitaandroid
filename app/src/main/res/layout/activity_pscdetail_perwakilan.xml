<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ikhwanul.ikhlas.iiwandroid.activities.PSCDetailPerwakilanActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_id_perwakilan"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="NIK"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_nik"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Nama Lengkap"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_nama_lengkap"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Tempat Lahir"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_tempat_lahir"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Tanggal Lahir"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_tanggal_lahir"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Jenis Kelamin"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Golongan Darah"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_goldarah"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Alamat"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_alamat"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>

            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Kabupaten"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_kabupaten"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>

            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Provinsi"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_provinsi"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>

            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Agama"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_agama"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>


            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Status Perkawinan"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_status_perkawinan"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Pekerjaan"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_pekerjaan"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="No.telp"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_no_telp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>

            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Email"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>

            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Status"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>

            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Terdaftar"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_terdaftar"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>

            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Username"/>
                <TextView
                    android:layout_weight="0.2"
                    android:gravity="center_horizontal"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ID Perwakilan"/>
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Perekomendasi"
                android:padding="5dp"
                android:textStyle="bold"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/color1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:padding="5dp">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/cardview_default_radius"
                    android:layout_margin="5dp">
                    <ImageView
                        android:padding="3dp"
                        android:id="@+id/img_recomendation"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:alpha="200"
                        android:scaleType="fitXY"
                        android:elevation="4dp"
                        android:src="@drawable/ic_menu_camera" />
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow
                            android:padding="5dp">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Kode"/>
                            <TextView
                                android:layout_weight="0.2"
                                android:gravity="center_horizontal"
                                android:text=":"/>
                            <TextView
                                android:id="@+id/tv_kode_perekomendasi"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="value"/>
                        </TableRow>

                        <TableRow
                            android:padding="5dp">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Nama Lengkap"/>
                            <TextView
                                android:layout_weight="0.2"
                                android:gravity="center_horizontal"
                                android:text=":"/>
                            <TextView
                                android:id="@+id/tv_nama_perekomendasi"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="value"/>
                        </TableRow>

                        <TableRow
                            android:padding="5dp">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="No.Telp"/>
                            <TextView
                                android:layout_weight="0.2"
                                android:gravity="center_horizontal"
                                android:text=":"/>
                            <TextView
                                android:id="@+id/tv_no_telp_perekomendasi"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="value"/>
                        </TableRow>

                        <TableRow
                            android:padding="5dp">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Alamat"/>
                            <TextView
                                android:layout_weight="0.2"
                                android:gravity="center_horizontal"
                                android:text=":"/>
                            <TextView
                                android:id="@+id/tv_alamat_perekomendasi"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="value"/>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
