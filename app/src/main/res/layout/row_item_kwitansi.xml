<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_rainbow"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:orientation="vertical"/>
            <TableLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No. Transaksi"
                            android:textSize="10dp"/>
                        <TextView
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No. Transaksi"
                            android:id="@+id/tv_no_transaksi"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_gravity="right"
                        android:gravity="right|center_vertical">
                        <TextView
                            android:id="@+id/tv_sudah_belum"
                            android:padding="5dp"
                            android:background="@drawable/background_with_radius_border1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Belum/Sudah"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:layout_margin="5dp">
                    <TextView
                        android:id="@+id/tv_no_kwitansi"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="No. Kwitansi"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/tv_status_kwitansi"
                            android:padding="5dp"
                            android:background="@drawable/background_with_radius_border1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status KW"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>